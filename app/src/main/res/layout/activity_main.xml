<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="?attr/colorPrimary" />

        <!-- Permission Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/permissionStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/cd_permission_status" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/main_permissions"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/permissionStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/main_checking_permissions"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <Button
                    android:id="@+id/permissionSetupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_setup"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Template Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/templateStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/cd_template_status" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/currentTemplateImageView"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:scaleType="centerInside"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/cd_current_template_thumbnail" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/main_template"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/templateStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/main_no_template_created"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <Button
                    android:id="@+id/createTemplateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_template"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Search Controls Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_search_control"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/searchStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_ready_to_search"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/startSearchButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/start_search"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button" />

                    <Button
                        android:id="@+id/stopSearchButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/stop_search"
                        android:layout_marginStart="4dp"
                        android:enabled="false"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/pauseSearchButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/main_pause"
                        android:layout_marginEnd="4dp"
                        android:enabled="false"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/resumeSearchButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/main_resume"
                        android:layout_marginStart="4dp"
                        android:enabled="false"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                <Button
                    android:id="@+id/forceStopButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Force Stop Service"
                    style="@style/Widget.Material3.Button"
                    android:backgroundTint="@android:color/holo_red_dark" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Results Display Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/coordinates_found"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/coordinatesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_coordinates_placeholder"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/confidenceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_confidence_placeholder"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/timestampText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_timestamp_placeholder"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_tap_for_details"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="italic" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- No Results Message -->
        <TextView
            android:id="@+id/noResultsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_no_coordinates_found"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:padding="16dp" />

        <!-- Settings Button -->
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_marginTop="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/testTemplateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_test_template"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Spacer for bottom padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>

</ScrollView>